[colors]

background     = #080808
foreground     = #ffffff
foreground-alt = #b2b2b2

alert  = #80a0ff
color2 = #8cc85f
color3 = #e3c78a
color4 = #80a0ff
color5 = #d183e8
color6 = #79dac8
color7 = #42cf89

[bar/mybar]

bottom = false

fixed-center = true

height = 22
width = 100%
padding-right = 2
padding-left = 2

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = TamzenForPowerline:pixelsize=12;2
font-1 = Symbols Nerd Font:size=8;2
font-2 = FontAwesome:size=9;2
font-3 = Source Code Pro:size=9;2

modules-left = battery network
modules-right = memory cpu temperature backlight pulseaudio date
modules-center = bspwm

tray-position = right
tray-maxsize = 16

module-margin-left = 1
module-margin-right = 1

[module/bspwm]
type                      = internal/bspwm
label-focused             = 
label-focused-padding     = 2
label-focused-foreground = ${colors.alert}
label-occupied            = 
label-occupied-foreground = ${colors.alert}
label-occupied-padding    = 2
label-urgent              = 
label-urgent-foreground   = ${colors.alert}
label-urgent-padding      = 2
label-empty               = 
label-empty-foreground    = ${colors.foreground-alt}
label-empty-padding       = 2
pin-workspaces = true

[module/backlight]
type = internal/backlight
card = intel_backlight
format =  <label>
format-foreground = ${colors.color7}
label = %percentage%%
label-foreground = ${colors.foreground}

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume-foreground = ${colors.color6}
format-volume = 墳 <label-volume>
label-volume-foreground = ${colors.foreground}

label-muted = 婢
label-muted-foreground = ${colors.alert}

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP0

poll-interval = 5

full-at = 99

time-format = %H:%M

label-discharging =  %percentage%% %time%
label-charging =  %percentage%%
label-full =  %percentage%%

;format-discharging = <ramp-capacity> <label-discharging>
;format-full = <ramp-capacity> <label-full>
;format-charging = <animation-charging> <label-charging>

format-discharging = <label-discharging>
format-full = <label-full>
format-charging = <label-charging>

;ramp-capacity-foreground = ${colors.color4}
;animation-charging-foreground = ${colors.color4}
;animation-full-foreground = ${colors.color4}
;format-discharging-foreground = ${colors.color4}

;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-3 = 
;ramp-capacity-4 = 

;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-3 = 
;animation-charging-4 = 
; Framerate in milliseconds
;animation-charging-framerate = 750

[module/cpu]
type = internal/cpu
interval = 0.5
format =  <label>
label = %percentage%%
format-foreground = ${colors.color2}
label-foreground = ${colors.foreground}

[module/memory]
type = internal/memory
interval = 3
format =  <label>
label = %gb_used%
format-foreground = ${colors.color3}
label-foreground = ${colors.foreground}

[module/date]
type = internal/date
label = %date% %time%
interval = 1.0
date = %d-%m-%Y
time = %I:%M
date-alt = %A, %d %B %Y
time-alt = %I:%M:%S
format =  <label>
format-foreground = ${colors.color5}
label-foreground = ${colors.foreground}

[module/network]
type = internal/network
interface = ${env:DEFAULT_NETWORK_INTERFACE:wlp3s0}
interval = 3.0
format-connected =  <label-connected>
format-disconnected = <label-disconnected>
label-connected =  %essid%
label-disconnected = 睊
format-connected-foreground = ${colors.color6}
label-connected-foreground = ${colors.foreground}
format-disconnected-foreground = ${colors.color6}
label-disconnected-foreground = ${colors.color6}

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
base-temperature = 20
warn-temperature = 70
format =  <label>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = #f00
format-foreground = ${colors.color4}
label-foreground = ${colors.foreground}

; vim: set ft=dosini nomodeline:
